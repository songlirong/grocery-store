.search {
  width: 100%;
  height: 100%;
  background: #fff;
}

.search-title {
  width: 100%;
  height: 145rpx;
  border-bottom: 2rpx solid #f6f6f6;
  background: #bdbdbd;
  padding-top: 40rpx;
  box-sizing: border-box;
}

.search-title-content {
  width: 100%;
  height: 100%;
  background: #fff;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search-back {
  width: 35rpx;
  height: 38rpx;
  background: url(data:image/png;base64,) no-repeat center / 35rpx auto;
}
.search-input {
  width: 400rpx;
  height: 63rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  padding:0 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #202020;
  position: relative;
}
.search-input-text{
  width: 310rpx;
  height: 63rpx;
}
.search-input-icon {
  width: 72rpx;
  height: 100%;
  position: absolute;
  top: 0;
  right:0;
  z-index: 999;
  background:url(data:image/png;base64,) no-repeat center / 30rpx auto;
}

.search-btn {
  width: 114rpx;
  height: 100%;
}

.search-history, .search-hot, .search-hot-cate {
  width: 100%;
  height: auto;
  padding: 30rpx 24rpx 0;
  box-sizing: border-box;
}

.search-history-title, .search-hot-title, .search-hot-cate-title {
  width: 100%;
  height: 52rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
}
.delete-btn{
  width: 52rpx;
  height: 52rpx;
  background: url(data:image/png;base64,) no-repeat center 4rpx / 32rpx auto;
}
.refresh-btn{
  width: 52rpx;
  height: 52rpx;
  background: url(data:image/png;base64,) no-repeat center 4rpx / 32rpx auto;
}

.search-history-content, .search-hot-content, .search-hot-cate-content {
  width: 100%;
  height: auto;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.content-list {
  width: 108rpx;
  height: 60rpx;
  padding: 0 26rpx;
  background: #f5f5f5;
  margin: 15rpx 20rpx 15rpx 0;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #333;
  text-align: center;
  line-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content-list:nth-child(4n){
  margin: 15rpx 0;
}