page {
  padding-top: 140rpx;
}

.header {
  width: 100%;
  height: 140rpx;
  background: linear-gradient(to right, #0acaff, #09b0ff);
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;
}

.header-title {
  width: 500rpx;
  height: 100%;
  font-size: 34rpx;
  color: #fff;
  text-align: center;
  line-height: 180rpx;
}

.header-search1 {
  width: 45rpx;
  height: 45rpx;
}

.header-search {
  width: 44rpx;
  height: 44rpx;
  margin-top: 48rpx;
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.list-big-box {
  width: 100%;
  height: auto;
  overflow: hidden;
}

.list-box {
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 50rpx 20rpx 0;
  box-sizing: border-box;
}

.list {
  width: 230rpx;
  height: 170rpx;
  margin-bottom: 40rpx;
  float: left;
}

.imgs {
  width: 136rpx;
  height: 120rpx;
  margin: 0 auto;
}

.imgs image {
  width: 100%;
  height: 100%;
}

.list-names {
  width: 100%;
  height: 35rpx;
  color: #0c0c0c;
  font-size: 30rpx;
  text-align: center;
  line-height: 35rpx;
  margin-top: 15rpx;
}
