.add-location {
  width: 100%;
  min-height: 1334rpx;
  background: #f5f5f5;
}

.location-title {
  width: 100%;
  height: 142rpx;
  background: #bdbdbd;
  padding-top: 40rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #dad8d7;
}

.location-title-head {
  width: 100%;
  height: 104rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.title-head-back {
  width: 56rpx;
  height: 104rpx;
  background: url(data:image/png;base64,) no-repeat center center  / auto 36rpx;
}

.title-head-text {
  width: auto;
  line-height: 104rpx;
  font-size: 36rpx;
  color: #2a2a2a;
}

.add-location-information {
  width: 100%;
  height: auto;
  background: #fff;
  margin-top: 20rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.location-information-li {
  width: 100%;
  height: 77rpx;
  border-bottom: 2rpx solid #e7e7e7;
  overflow: hidden;
}

.information-li-title {
  width: 168rpx;
  line-height: 77rpx;
  color: #959595;
  font-size: 24rpx;
  float: left;
}

.information-li-content {
  width: auto;
  height: 100%;
  line-height: 77rpx;
  font-size: 24rpx;
  color: #333;
  float: left;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.information-li-more {
  width: 30rpx;
  height: 100%;
  float: right;
  background: url(data:image/png;base64,) no-repeat center / 24rpx auto;
}

.information-li-input {
  width: calc(100% - 168rpx);
  height: 100%;
  float: left;
  font-size: 24rpx;
  color: #333;
}

.content-label {
  width: auto;
  height: 50rpx;
  border: 2rpx solid #dadada;
  border-radius: 25rpx;
  text-align: center;
  line-height: 46rpx;
  margin-right: 24rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.content-label.hot{
  background: #0092ff;
  border: 2rpx solid #0092ff;
  color: #fff;
}

.add-btn {
  width: 638rpx;
  height: 80rpx;
  background: #0092ff;
  text-align: center;
  line-height: 80rpx;
  margin: 0 auto;
  border-radius: 40rpx;
  margin-top: 33rpx;
  color: #fff;
}

.placeholder-class {
  font-size: 24rpx;
  color: #c2c2c2;
}